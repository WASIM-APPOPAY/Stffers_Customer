<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.forgopassword.FragmentOtpForgot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.stuffer.stuffers.views.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Verify Code"
            android:textColor="@color/common_color"
            android:textSize="@dimen/dp_25" />

        <com.stuffer.stuffers.views.MyTextViewBold
            android:id="@+id/tvInfoOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Verify Code"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6"

            tools:layout_editor_absoluteX="8dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/otp_edittext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/otp_edittext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text3"

                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    android:background="@drawable/otp_edittext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"


                    android:background="@drawable/otp_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/otp_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/otp_edit_text6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    android:background="@drawable/otp_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/trueBlack"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@color/common_bottom_line_color" />

            </FrameLayout>
        </LinearLayout>

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@color/common_color"
            android:textSize="16sp" />

        <com.stuffer.stuffers.views.MyTextViewBold
            android:id="@+id/retryTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Didn't received OTP?"
            android:textColor="@color/common_text_color"
            android:textSize="20sp" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/btnResendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signinline"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:elevation="1.5dp"
            android:gravity="center"
            android:text="@string/resend_code"
            android:textColor="@color/common_color"
            android:textSize="16sp" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvVerifyOtpCommon"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_above="@+id/signinline"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/view_normal_blue2"
            android:elevation="1.5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Verify"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/logo2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_bg_bottom" />

        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@color/common_bottom_line_color" />

    </LinearLayout>
</LinearLayout>