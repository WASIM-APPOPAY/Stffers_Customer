<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_weight="1"
    android:background="?attr/selectableItemBackground"
    app:contentPadding="8dp">


    <LinearLayout
        android:id="@+id/vertical_list_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_row"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.stuffer.stuffers.views.MyTextViewBold
            android:id="@+id/tvAmountGift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_attach_money_recharge"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="454"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="15dp"
            android:src="@drawable/ic_arrow_forward_clave"
            app:tint="@color/redcolor" />

    </LinearLayout>
</LinearLayout>