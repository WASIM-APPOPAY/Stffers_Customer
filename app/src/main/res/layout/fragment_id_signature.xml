<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".fragments.finance_fragment.IdSignatureFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.stuffer.stuffers.views.MyCheckBox
                android:id="@+id/materialCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="@string/info_aceptar_acuerdo_antes_de_enviar_su_aplicacion" />


            <LinearLayout
                android:id="@+id/llParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/ivBankLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/bank_logo" />


                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/info_declaraci_n_jurada_de_ingresos"

                    />

                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/info_cuentas_de_debida_diligencia_simplificada"
                    android:textSize="14sp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvFirstBlank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvSourceOfIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="MyShop"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="@dimen/google_1x"
                    android:background="@color/color_stroke"
                    android:visibility="gone"

                    />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfoIncome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/info_income"
                    android:visibility="gone" />


                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvSourceOfIncome1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MyShop"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="@dimen/google_1x"
                    android:background="@color/color_stroke"
                    android:visibility="gone"

                    />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfoIncome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/info_income2"
                    android:visibility="gone" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfo5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvInfo6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvUserName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="USERNAME" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="@dimen/google_1x"
                    android:background="@color/color_stroke"

                    />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvPart5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    />


                <com.stuffer.stuffers.views.MyTextViewBold
                    android:id="@+id/tvPassportNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Passport number" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="@dimen/google_1x"
                    android:background="@color/color_stroke"

                    />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvPart6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(Número de Identificación)" />

                <LinearLayout
                    android:id="@+id/layoutUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="2dp"

                        android:background="@drawable/subcat_bg"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="Your Id Proof"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />


                    <FrameLayout
                        android:id="@+id/fTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/roundrect_sign"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">


                        <ImageView

                            android:id="@+id/image1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:padding="15dp"

                            android:src="@drawable/ic_image_blank" />
                    </FrameLayout>


                </LinearLayout>


                <com.stuffer.stuffers.views.MySwitchView
                    android:id="@+id/signatureBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/info_part7"
                    android:textSize="18sp" />


                <FrameLayout
                    android:id="@+id/frameSignature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundrect_sign"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/signature_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="5dp" />

                </FrameLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <com.stuffer.stuffers.views.MyButton

        android:id="@+id/btnSubmitForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue_rounded_bg"
        android:padding="20dp"
        android:text="Sumbit"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</LinearLayout>


