<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"

    tools:context=".activity.wallet.UrlsActivity">


    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textAlignment="inherit"
                android:text="@string/welcome3"
                android:textSize="15sp" />

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText2"
                android:layout_width="match_parent"
                android:textAlignment="inherit"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="@string/welcome4"
                android:textSize="15sp" />

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textAlignment="inherit"
                android:text="@string/welcome5"
                android:textSize="15sp" />

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="inherit"
                android:scrollbars="vertical"
                android:text="@string/welcome6"
                android:textSize="15sp" />

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="inherit"
                android:scrollbars="vertical"
                android:text="@string/welcome7"
                android:textSize="15sp" />

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvLongText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="inherit"
                android:scrollbars="vertical"
                android:text="@string/welcome8"
                android:textSize="15sp" />


            <!--<im.delight.android.webview.AdvancedWebView
                android:padding="@dimen/dp_5"
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>-->

        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox

            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="I have read the term and condition" />

        <Button
            android:id="@+id/btnNextTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/view_normal_blue2"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>