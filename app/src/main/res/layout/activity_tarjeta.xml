<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FianceTab.TarjetaActivity">

    <include layout="@layout/toolbar" />

    <!--<FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_gravity="center"

                   android:adjustViewBounds="true"
                   android:background="#FAFAFA"


                   android:src="@drawable/union_pay5" />
               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/union_express"
                   />


           </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_field_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mTiedAccNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:hint="Account Number"
                    android:editable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:text="2233445566778899"
                    tools:text="1234 5678 9012" />

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_fName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/subcat_bg"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mTiedFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MD"
                    android:editable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:hint="First Name"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textVisiblePassword|textCapCharacters"
                    tools:text="FIRST NAME" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_mName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mTiedMname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Middle Name"
                    android:text="H"
                    android:editable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textVisiblePassword|textCapCharacters"
                    tools:text="MIDDLE NAME" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mTiedLname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:text="WASIM"
                    android:editable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textVisiblePassword|textCapCharacters"
                    tools:text="LAST NAME" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_normal_subcat"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.stuffer.stuffers.views.MyTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mob Number : "
                    android:textColor="@color/colorPrimary" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvCountryCodeU"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    android:textSize="16sp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:layout_width="0dp"
                    android:id="@+id/tvMobNumU"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:textSize="16sp" />


            </LinearLayout>

            <com.stuffer.stuffers.views.MyCheckBox
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="please accept term and condition"
                />



            <com.stuffer.stuffers.views.MyButton
                android:id="@+id/btnCardEnrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/blue_rounded_bg"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>


    </ScrollView>



</LinearLayout>