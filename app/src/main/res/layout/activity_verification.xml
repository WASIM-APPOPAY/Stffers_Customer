<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".commonChat.chat.VerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:padding="@dimen/dp_15"
            android:src="@drawable/appopay_new_logo2" />

        <com.stuffer.stuffers.views.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="@string/info_enter_otp2"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="italic" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="@string/info_we_send"
            android:textAppearance="?attr/textAppearanceBody1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <EditText
                android:id="@+id/otp_edit_text1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"

                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text3"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text4"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text5"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text6"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/otp_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />
        </LinearLayout>


        <com.stuffer.stuffers.views.MyTextViewBold
            android:id="@+id/retryTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:gravity="center"
            android:text="@string/otp_resend_in_13_sec"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="italic" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvAgree"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signinline"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"

            android:background="@drawable/blue_rounded_bg"
            android:elevation="1.5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/info_verify"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

    <!--<include layout="@layout/bootm_layout" />-->


</LinearLayout>