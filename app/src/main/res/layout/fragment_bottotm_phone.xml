<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.bottom_fragment.BottotmPinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded2"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/appopay_gift_card" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Provide us below details"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.stuffer.stuffers.views.MyButton
                android:id="@+id/btnCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Close"
                android:textColor="@color/white"
                android:theme="@style/MaterialButton"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/dot_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/subcat_bg"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_mobile"
                android:padding="5dp" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/edtCustomerCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#0000"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/Tex"
                android:textColorHint="@color/textSub"
                android:textSize="14sp"
                app:ccp_areaCodeDetectedCountry="true"
                app:ccp_autoDetectCountry="false"
                app:ccp_defaultPhoneCode="507"
                app:ccp_excludedCountries=""
                app:ccp_showFlag="false"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false" />


            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=" receiver phone number"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivContactList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:src="@drawable/ic_contact_list" />


        </LinearLayout>


        <LinearLayout
            android:background="@drawable/subcat_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey1"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey2"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey3"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="3"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey4"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey5"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey6"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="6"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey7"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="7"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey8"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="8"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey9"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="9"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="CLEAR"
                    android:textColor="@color/white"
                    android:theme="@style/MaterialButton" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnKey10"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.stuffer.stuffers.views.MyButton
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:theme="@style/MaterialButton" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>