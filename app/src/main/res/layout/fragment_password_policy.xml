    <com.stuffer.stuffers.views.MyTextView
        android:visibility="gone"
        android:id="@+id/tvPolicyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/logo2" />

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="AppOpay Password Policy"
                android:textColor="@color/common_text_color"
                android:textSize="16sp" />


        </LinearLayout>

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Minimum password length is 8 characters."
            android:textColor="@color/common_text_color" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Required at least one uppercase letter from latin alphaber(A-Z)."
            android:textColor="@color/common_text_color" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Required at least one lowercase letter from latin alphaber(a-z)."
            android:textColor="@color/common_text_color" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Required at least numeric."
            android:textColor="@color/common_text_color" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Required at least one non-alphanumeric character(!@#$%^&amp;*()_+=[]{}|')."
            android:textColor="@color/common_text_color" />
        <!--android:text="Required at least one non-alphanumeric character(!@#$%^amp&;*()_+=[]{}|')"
         android:textColor="@color/common_text_color" />-->

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/common_check"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Minimum password length is 8 characters."
            android:textColor="@color/common_text_color" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"

            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Note white space is note allowed."
            android:textColor="@color/common_text_color" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.stuffer.stuffers.views.MyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:theme="@style/MaterialButton"
            android:visibility="invisible" />

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/white"
            android:theme="@style/MaterialButton"

            />


    </LinearLayout>


</LinearLayout>