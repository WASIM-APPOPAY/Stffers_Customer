<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_root"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.stuffer.stuffers.my_camera.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/border_camera"
        android:layout_width="match_parent"
        android:layout_height="240dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rect_border" />
    <!--<TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->


    <com.stuffer.stuffers.my_camera.FocusView
        android:id="@+id/focusView"
        android:layout_width="@dimen/focus_view_size"
        android:layout_height="@dimen/focus_view_size"
        android:visibility="gone"/>

</FrameLayout>
