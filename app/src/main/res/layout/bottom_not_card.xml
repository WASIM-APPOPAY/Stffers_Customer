<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="#80FFFFFF"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardCornerRadius="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"


                android:src="@drawable/logo2" />

            <com.stuffer.stuffers.views.MyTextViewBold
                android:id="@+id/tvCommonHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"


                android:text="Wallet Card Enrollment"
                android:textAllCaps="true"
                android:textColor="@color/common_color"
                android:textSize="18sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/wallet_card140" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/visa_visa_card" />


        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvCommonContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="20dp"
            android:padding="12dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/btnApply"
            android:layout_width="90dp"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/view_normal_blue2"
            android:gravity="center|center_vertical"
            android:padding="5dp"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"


            />
    </LinearLayout>


</androidx.cardview.widget.CardView>

