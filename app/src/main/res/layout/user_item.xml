<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_user_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_user_drawable" />

    <TextView
        android:id="@+id/username_user_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/profile_image_user_item"
        android:layout_toRightOf="@id/profile_image_user_item"
        android:text="username"
        android:textSize="18sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/verified_user_profile"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@id/username_user_item"
        android:src="@drawable/verifieduser" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/username_user_item"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_image_user_item"
        android:src="@drawable/ic_user_drawable"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/username_user_item"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/profile_image_user_item"
        android:layout_toRightOf="@+id/profile_image_user_item"
        android:src="@drawable/ic_user_drawable"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_user_item"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/profile_image_user_item"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:textColor="@color/colorPrimaryDark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:background="@color/grey_light_secondary"
        android:visibility="gone" />


</RelativeLayout>