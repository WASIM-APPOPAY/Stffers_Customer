                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Visa Direct"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout

                style="@style/LayoutFundLinearStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="3"

                android:background="@drawable/no_round_bg1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:src="@drawable/money_express_new" />

                <com.stuffer.stuffers.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="UnionPay Money Express"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


