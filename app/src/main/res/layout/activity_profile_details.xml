<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common2"
    android:orientation="vertical"
    tools:context=".activity.wallet.ProfileDetailsActivity">

    <include layout="@layout/toolbar" />

    <com.stuffer.stuffers.views.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="User Profile Details"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/subcat_bg"
                android:drawableLeft="@drawable/ic_user_drawable"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimary"
                android:gravity="start|center"
                android:minHeight="60dp"
                android:padding="12dp"
                android:textColor="@color/Tex"
                android:textSize="14sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvEmial"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/subcat_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:minHeight="60dp"

                android:padding="12dp"
                android:textColor="@color/Tex"
                android:textSize="14sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvPhone"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/subcat_bg"
                android:drawableLeft="@mipmap/ic_mobile"
                android:drawablePadding="8dp"
                android:gravity="start|center"
                android:minHeight="60dp"

                android:padding="12dp"
                android:textColor="@color/Tex"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layoutAfterUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvTrans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableTint="@color/colorPrimary"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_fiber_pin"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:padding="12dp"
                    android:text="Transaction Pin  : 123456"
                    android:textColor="@color/Tex"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_fiber_pin"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:padding="12dp"
                    android:text="Screen Lock Pin  : 123456"
                    android:textColor="@color/Tex"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_birthday_cake"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:drawableTint="@color/colorPrimary"
                    android:padding="12dp"
                    android:textColor="@color/Tex"
                    android:textSize="14sp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvCityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_city_icon"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:drawableTint="@color/colorPrimary"
                    android:padding="12dp"
                    android:textColor="@color/Tex"
                    android:textSize="14sp" />
                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_city_icon"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:padding="12dp"
                    android:textColor="@color/Tex"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/subcat_bg"
                    android:drawableLeft="@drawable/ic_home_profile"
                    android:drawablePadding="8dp"
                    android:gravity="start|center"
                    android:minHeight="60dp"
                    android:drawableTint="@color/colorPrimary"
                    android:padding="12dp"
                    android:textColor="@color/Tex"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>