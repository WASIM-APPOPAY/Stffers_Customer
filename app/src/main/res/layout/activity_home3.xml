<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wallet.HomeActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.wallet.HomeActivity3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:background="@color/common_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_circle_white">

                <ImageView
                    android:id="@+id/menu_icon_drawer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_left" />
            </FrameLayout>

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccWhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_autoDetectCountry="false"
                app:ccp_showFlag="false"
                app:ccp_contentColor="@color/white"
                app:ccp_showFullName="true"
                app:ccp_showPhoneCode="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical">

                <SearchView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/subcat_bg" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    app:tint="@color/white"
                    android:src="@drawable/bright_left" />

                <ImageView
                    app:tint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:src="@drawable/bplus" />

            </LinearLayout>

        </LinearLayout>

        <!--<include layout="@layout/fragment_landing" />-->

        <FrameLayout
            android:id="@+id/landingContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCEBDB"
            android:orientation="vertical">
            <!--<com.volcaniccoder.bottomify.BottomifyNavigationView
                android:id="@+id/bottomify_nav"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                app:active_color="@color/common_text_color"
                app:animation_duration="300"
                app:item_padding="4dp"
                app:item_text_size="10sp"
                app:menu="@menu/landing_menu"
                app:passive_color="@color/search_gray"
                app:pressed_color="@color/colorPrimary"
                app:scale_percent="5" />-->

            <include layout="@layout/landing_bottom" />

            <!--<include layout="@layout/bottom_design_layout" />-->
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <include layout="@layout/customlayout" />


    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>