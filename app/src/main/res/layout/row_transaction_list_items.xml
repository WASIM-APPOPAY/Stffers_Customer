<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_address"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivType"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"

                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_recive_money" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvDescription"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="5dp"
                android:text="An amount of (1.3 USD ) will be debited from your bank account,Post approval to fund your wallet"
                android:textSize="16sp"

                />

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Account"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="8dp"
                android:text="Wallet Account"
                android:textColor="@color/colorPrimary"


                android:textSize="16sp" />


        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.stuffer.stuffers.views.MyTextView

                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Date and Time"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvAmountCurrency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="16sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTransactionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Transaction Status"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTransactionInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="16sp" />
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/ivView"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_remove_red_eye"
                app:tint="#6310F6"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>