<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.bottom_fragment.BottotmPinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="0.6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/logo2" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/info_transaction_pin"

                android:textColor="@color/common_text_color"
                android:textSize="20sp" />

            <ImageView
                 android:id="@+id/ivClosePin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/common_text_color" />

            <com.stuffer.stuffers.views.MyButton
                android:id="@+id/btnCloseDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/info_close"
                android:textColor="@color/white"
                android:theme="@style/MaterialButton"
                android:visibility="gone"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/dot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />

            <ImageView
                android:id="@+id/dot_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />

            <ImageView
                android:id="@+id/dot_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />

            <ImageView
                android:id="@+id/dot_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/gray_dots" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"

                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey9"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"

                        android:background="@drawable/view_normal_blue2"
                        android:gravity="center_vertical|center"
                        android:text="@string/info_clear"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyButton
                        android:id="@+id/btnKey10"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:background="@drawable/bg_circle_white"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/btnConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/view_normal_blue2"
                        android:gravity="center_vertical|center"
                        android:text="@string/info_confirm"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>