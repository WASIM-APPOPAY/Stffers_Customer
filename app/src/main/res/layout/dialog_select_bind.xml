<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_select_bind_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_40"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select the merchant to bind"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_bind_rv"
            android:layout_width="@dimen/dp_310"
            android:layout_height="@dimen/dp_155"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:clipToPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_bind_yes"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_43"
                android:layout_weight="1"
                android:background="@drawable/shape_select_bind_yes"
                android:gravity="center"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="#FA294F"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/select_bind_no"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="#4D5A87"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>