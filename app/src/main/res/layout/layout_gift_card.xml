<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/fParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivWallet"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/user_card3"
            android:clickable="true"
            android:focusable="true" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvAccountNos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="0000    0000    0000    0000    000"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="35dp"
            android:text="Exp:01/30"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="25dp"

            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layoutCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvFromCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="INR"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvGiftAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/btnClaim"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:theme="@style/MaterialButton1"
            android:text="Claim"
            android:textColor="#D64040"

            />

        <com.stuffer.stuffers.views.MyTextView
            android:visibility="gone"
            android:id="@+id/tvGiftCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:rotation="-65"
            android:textColor="#FFD54F"
            android:textSize="16sp"
            android:text="Gift Card"
             />


    </FrameLayout>


    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_light_secondary" />

</LinearLayout>