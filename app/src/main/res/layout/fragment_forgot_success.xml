<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.forgopassword.ForgotSuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:padding="@dimen/dp_5"
                android:src="@drawable/check_common2"

                />

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Password Changed!"
                android:textColor="@color/common_text_color"
                android:textSize="22sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Your password has been\n changed successfully."
                android:textAlignment="center"
                android:textColor="@color/common_text_color"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvBackLogin"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_above="@+id/signinline"

                android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="20dp"

                android:background="@drawable/view_normal_blue2"
                android:elevation="1.5dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="Back to Login"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_200"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@color/common_bottom_line_color" />


</LinearLayout>