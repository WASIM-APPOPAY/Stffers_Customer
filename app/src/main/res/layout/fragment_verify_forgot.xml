<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.forgopassword.VerifyForgotFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageForgot1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/fpassword1" />

        <ImageView
            android:id="@+id/imageForgot2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/fpassword2"
            android:visibility="gone" />

        <FrameLayout
            android:layout_marginTop="@dimen/dp_10"
            android:elevation="1.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/common_border_rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                android:background="@drawable/edit_text_rounded"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:padding="@dimen/dp_3" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/edtCustomerCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#0000"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/Tex"
                    android:textColorHint="@color/textSub"
                    android:textSize="14sp"
                    app:ccp_areaCodeDetectedCountry="false"
                    app:ccp_autoDetectCountry="false"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"

                    />


                <com.stuffer.stuffers.views.MyEditText
                    android:id="@+id/edUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="sans-serif"
                    android:inputType="phone"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="3.3sp"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:hint="Enter mobile number"
                    android:padding="@dimen/dp_5"
                    android:textColor="#727272"
                    android:textSize="16sp"
                    android:textStyle="normal" />


            </LinearLayout>
        </FrameLayout>

        <com.stuffer.stuffers.views.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/info_appopay_will_send_otp"
            android:textColor="@color/textSub"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvSendOtpCommon"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_above="@+id/signinline"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/view_normal_blue2"
            android:elevation="1.5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Send Otp"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/logo2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_bg_bottom" />

        <View
            android:layout_width="@dimen/dp_200"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@color/common_bottom_line_color" />

    </LinearLayout>

</LinearLayout>