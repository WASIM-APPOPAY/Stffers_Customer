<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.cashSends.CashBeneficiary">

    <com.stuffer.stuffers.views.MyTextViewBold
        android:id="@+id/tvTitleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="@string/info_payments_methods"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Sending Currency"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/tvSendingCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center|center_vertical"


                        android:letterSpacing="0.2"

                        android:minHeight="40dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Destination Country"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/tvDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_dropdown"
                        android:drawableTint="@color/black"
                        android:gravity="center_vertical"

                        android:hint="select country"
                        android:letterSpacing="0.2"
                        android:minHeight="40dp"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Payment Mode"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/tvPaymentMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_dropdown"
                        android:drawableTint="@color/black"
                        android:gravity="center_vertical"
                        android:hint="select mode"

                        android:minHeight="40dp"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <com.stuffer.stuffers.views.MyTextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"

                        android:drawableTint="@color/black"
                        android:gravity="center_vertical"
                        android:hint="select mode"
                        android:minHeight="40dp"
                        android:padding="5dp"

                        android:text="CASH"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Destination Currency"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/tvDesCurrency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical"

                        android:hint="select currency"
                        android:letterSpacing="0.2"
                        android:minHeight="40dp"

                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.stuffer.stuffers.views.MyTextViewBold
                android:id="@+id/cTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:text="@string/info_payments_methods"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="First Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/bEdFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:hint="enter first name"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:minHeight="45dp"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Last Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/bEdlastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:hint="enter LAST name"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:minHeight="45dp"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Nationality"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.stuffer.stuffers.views.MyTextView
                        android:id="@+id/bTvNational"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_dropdown"
                        android:drawableTint="@color/black"
                        android:gravity="center_vertical"
                        android:minHeight="45dp"
                        android:padding="5dp"
                        android:text="Please select Nationality"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Mobile Number"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/bCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:ccp_defaultPhoneCode="507"
                            app:ccp_showFlag="false" />

                        <com.stuffer.stuffers.views.MyEditText
                            android:id="@+id/bMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:digits="0123456789"
                            android:gravity="center_vertical"
                            android:hint="enter mobile number"
                            android:imeOptions="flagNoExtractUi|actionNext"
                            android:inputType="number"
                            android:minHeight="45dp"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"

                android:layout_marginEnd="8dp"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Address"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.stuffer.stuffers.views.MyEditText
                            android:id="@+id/bEdAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"


                            android:clickable="true"
                            android:gravity="start"
                            android:hint="enter address"
                            android:imeOptions="flagNoExtractUi|actionDone"
                            android:lines="3"
                            android:minHeight="45dp"
                            android:padding="5dp"

                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <com.stuffer.stuffers.views.MyTextView
        android:id="@+id/bBtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/blue_rounded_bg"
        android:elevation="1.5dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="16sp" />


</LinearLayout>