<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.finance.LoanActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.stuffer.stuffers.views.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="User Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivExpand"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="3dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_remove_primary"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/layoutExpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:el_duration="1000"
                    app:el_expanded="true"
                    app:el_parallax="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.stuffer.stuffers.views.MyTextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/subcat_bg"
                            android:drawableLeft="@drawable/ic_user_drawable"
                            android:drawablePadding="8dp"
                            android:gravity="start|center"
                            android:minHeight="60dp"
                            android:padding="12dp"
                            android:textColor="@color/Tex"
                            android:textSize="14sp" />

                        <com.stuffer.stuffers.views.MyTextView
                            android:id="@+id/tvEmial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/subcat_bg"
                            android:drawableLeft="@drawable/ic_email"
                            android:drawablePadding="8dp"
                            android:gravity="start|center"
                            android:minHeight="60dp"

                            android:padding="12dp"
                            android:textColor="@color/Tex"
                            android:textSize="14sp" />

                        <com.stuffer.stuffers.views.MyTextView
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/subcat_bg"
                            android:drawableLeft="@mipmap/ic_mobile"
                            android:drawablePadding="8dp"
                            android:gravity="start|center"
                            android:minHeight="60dp"

                            android:padding="12dp"
                            android:textColor="@color/Tex"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/layoutAfterUpdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.stuffer.stuffers.views.MyTextView
                                android:id="@+id/tvDob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/subcat_bg"
                                android:drawableLeft="@drawable/ic_birthday_cake"
                                android:drawablePadding="8dp"
                                android:gravity="start|center"
                                android:minHeight="60dp"

                                android:padding="12dp"
                                android:textColor="@color/Tex"
                                android:textSize="14sp" />

                            <com.stuffer.stuffers.views.MyTextView
                                android:id="@+id/tvCityName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/subcat_bg"
                                android:drawableLeft="@drawable/ic_city_icon"
                                android:drawablePadding="8dp"
                                android:gravity="start|center"
                                android:minHeight="60dp"

                                android:padding="12dp"
                                android:textColor="@color/Tex"
                                android:textSize="14sp" />

                            <com.stuffer.stuffers.views.MyTextView
                                android:id="@+id/tvAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/subcat_bg"
                                android:drawableLeft="@drawable/ic_home_profile"
                                android:drawablePadding="8dp"
                                android:gravity="start|center"
                                android:minHeight="60dp"

                                android:padding="12dp"
                                android:textColor="@color/Tex"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </LinearLayout>



            <!--wwwwwwwwwwwwwwwwwwwwwwww-->

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Additional Information"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_round_bg1"
                android:orientation="vertical"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">


                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/edWorkExp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:drawableStart="@drawable/ic_user_drawable"
                        android:drawablePadding="10dp"
                        android:hint="Work Experience"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="16sp"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_light_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint">


                            <com.stuffer.stuffers.views.MyEditText
                                android:id="@+id/edIncome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#0000"
                                android:drawableStart="@drawable/ic_attach_money_recharge"
                                android:drawablePadding="10dp"
                                android:hint="Yearly Income"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/Tex"
                                android:textColorHint="@color/textSub"
                                android:textSize="16sp"

                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colortext"
                            android:textColorHint="@color/colorhint">


                            <com.stuffer.stuffers.views.MyEditText
                                android:id="@+id/edTotalMember"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#0000"
                                android:drawableStart="@drawable/ic_user_drawable"
                                android:drawablePadding="10dp"
                                android:hint="No of house hold"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/Tex"
                                android:textColorHint="@color/textSub"
                                android:textSize="16sp"

                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_light_secondary" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_round_bg1"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_rounded2"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="8dp"
                        android:text="Loan Amount Request"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/edAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="0123456789."
                        android:drawableLeft="@drawable/ic_attach_money_recharge"
                        android:gravity="center_vertical"
                        android:hint="@string/info_hint_enter_amount"
                        android:imeOptions="actionNext|flagNoExtractUi"
                        android:inputType="numberDecimal"
                        android:minHeight="45dp"
                        android:paddingLeft="8dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_rounded2"
                    android:orientation="vertical">

                    <com.stuffer.stuffers.views.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="8dp"
                        android:text="No of Repayment"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/edNoOfRepayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="0123456789."
                        android:drawableLeft="@drawable/ic_number"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:hint="Repayment"
                        android:imeOptions="actionDone|flagNoExtractUi"
                        android:inputType="numberDecimal"
                        android:minHeight="45dp"
                        android:paddingLeft="8dp"

                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.stuffer.stuffers.views.MyButton
        android:id="@+id/btnTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue_rounded_bg"
        android:padding="20dp"
        android:text="Submit Request"
        android:textAllCaps="true"
        android:textColor="@color/white" />


</LinearLayout>