<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/menu2"
            android:visibility="invisible"
            app:tint="@color/black" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvLHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-50dp"
            android:gravity="center"
            android:text="LOAN HOME"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/landingContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <com.volcaniccoder.bottomify.BottomifyNavigationView
            android:id="@+id/bottomify_nav"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:layout_marginBottom="@dimen/dp_10"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:orientation="horizontal"
            app:active_color="@color/white"
            app:animation_duration="300"

            app:item_text_size="15sp"
            app:menu="@menu/loan_bottom_menu"
            app:passive_color="@color/black"
            app:pressed_color="@color/colorPrimary"
            app:scale_percent="4" />

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bottom_logo_union" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bottom_logo_2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_quick_pass" />


            <!--<ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/appopay_new_card_logo2" />-->

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/wallet_card140" />

            <!--
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/visa_mastercard_china" />-->


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

