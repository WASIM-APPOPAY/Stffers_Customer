<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    tools:context=".commonChat.chat.BasicInfoActivity">


    <include layout="@layout/common_toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:src="@drawable/logo2" />

            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="6.7sp"

                android:text="@string/phone_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_border_rectangle"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_rounded">

                    <ImageView

                        android:id="@+id/ivFlag"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:padding="@dimen/dp_3" />

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/userPhone"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_margin="1dp"
                        android:layout_toRightOf="@id/ivFlag"
                        android:background="@null"
                        android:fontFamily="sans-serif"
                        android:inputType="none"
                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="3.3sp"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:padding="@dimen/dp_5"
                        android:textColor="#727272"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#2F606060"
                android:visibility="gone" />

            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="6.7sp"
                android:text="@string/fname"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_border_rectangle"
                android:orientation="vertical">

                <com.stuffer.stuffers.views.MyEditText
                    android:id="@+id/userNameEditFirst"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="1dp"

                    android:background="@drawable/edit_text_rounded"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_first_your_name"
                    android:inputType="text"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="3.3sp"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#2F606060"
                android:visibility="gone" />

            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="6.7sp"
                android:text="@string/lname"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"

                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_border_rectangle"
                android:orientation="vertical">

                <com.stuffer.stuffers.views.MyEditText
                    android:id="@+id/userNameEditLast"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="1dp"
                    android:background="@drawable/edit_text_rounded"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_your_last_name"
                    android:inputType="text"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="3.3sp"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#2F606060"
                android:visibility="gone" />


            <com.stuffer.stuffers.views.MyTextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/view_normal_blue2"
                android:elevation="1.5dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/info_save"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>


