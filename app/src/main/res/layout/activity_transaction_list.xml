<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    tools:context=".activity.wallet.TransactionListActivity">

    <include layout="@layout/common_toolbar" />

    <com.stuffer.stuffers.views.MySwitchView
        android:id="@+id/swAccountNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/view_common_rounded"
        android:gravity="center"
        android:padding="8dp"
        android:text="A/C Number  :  6644552244552233"
        android:textColor="@color/more_than_other_dark_grey"
        android:textSize="16sp"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rvTransactionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <include layout="@layout/common_bg_bottom" />
    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_200"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@color/common_bottom_line_color" />


</LinearLayout>