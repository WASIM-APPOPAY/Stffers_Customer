<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.wallet.OverviewActivity">

    <include layout="@layout/toolbar" />
    <Button

        android:id="@+id/btnShow"
        android:text="show notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <LinearLayout

        android:id="@+id/mainOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_rounded"
        android:orientation="vertical"
        android:visibility="visible">



        <!--frameProfileCompleted-->

        <FrameLayout
            android:id="@+id/frameProfileCompleted"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user_drawable"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Profile completed"

                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivProfileCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_secondary" />
        <!--frameMobileVerified-->
        <FrameLayout
            android:id="@+id/frameMobileVerified"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_mobile"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Mobile verified"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivMobileVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />-->

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_secondary" />

        <!--frameEmailVerified-->
        <FrameLayout
            android:id="@+id/frameEmailVerified"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="E-mail verified"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivEmailVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_secondary" />

        <!--frameIdUploaded-->
        <FrameLayout
            android:id="@+id/frameIdUploaded"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Id uploaded"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivIdUploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_secondary" />
        <!--framePaymentVerified-->
        <FrameLayout
            android:id="@+id/framePaymentVerified"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mobile_payment1"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Payment verified"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivPaymentVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_secondary" />
        <!--frameBankVerified-->
        <FrameLayout
            android:id="@+id/frameBankVerified"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bank1"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Bank verified"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivBankVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_criss_cross" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.stuffer.stuffers.views.MyTextView

            android:id="@+id/tvUserIds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvFcmToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvFcmToken1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvPlayAvialable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>


