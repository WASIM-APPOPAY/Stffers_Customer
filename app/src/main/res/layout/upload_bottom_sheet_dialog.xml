<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llUpload"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingRight="15dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/ivBankLogo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/bank_logo" />

    <com.stuffer.stuffers.views.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Upload your documets by below option"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/rbtCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Using Camera "

            />

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/rbtGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:text="By Using Media"

            />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Close"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/MaterialButton3" />

        <com.stuffer.stuffers.views.MyButton
            android:id="@+id/btnProceed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/MaterialButton2" />
    </LinearLayout>

</LinearLayout>