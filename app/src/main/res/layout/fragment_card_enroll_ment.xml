<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.union_fragments.CardEnrollMentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_circle_white"
                android:padding="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/union_pay5" />


            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_field_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">-->
            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Account Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyEditText
                android:id="@+id/mTiedAccNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/edit_text_rounded"
                android:clickable="false"
                android:editable="false"

                android:enabled="false"
                android:gravity="center_vertical|left"

                android:hint="Account Number"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:padding="5dp"
                android:text="2233445566778899"
                android:textColor="@color/search_gray"

                />

            <!--</com.google.android.material.textfield.TextInputLayout>-->


            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_fName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/subcat_bg"

                android:padding="5dp">-->
            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="First Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyEditText
                android:id="@+id/mTiedFname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/edit_text_rounded"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|left"
                android:hint="First Name"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textVisiblePassword|textCapCharacters"
                android:padding="5dp"
                android:text="Don"
                android:textColor="@color/search_gray" />

            <!--</com.google.android.material.textfield.TextInputLayout>-->

            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_mName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">-->

            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Middle Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mTiedMname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_rounded"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:hint="Middle Name"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textVisiblePassword|textCapCharacters"
                android:padding="5dp"
                android:text="H"
                android:textColor="@color/search_gray"
                android:visibility="gone"
                tools:text="MIDDLE NAME" />

            <!--</com.google.android.material.textfield.TextInputLayout>-->


            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinput_lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/view_normal_subcat"
                android:padding="5dp">-->
            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Last Name"

                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <com.stuffer.stuffers.views.MyEditText
                android:id="@+id/mTiedLname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_rounded"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|left"

                android:hint="Last Name"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textVisiblePassword|textCapCharacters"
                android:padding="5dp"
                android:text="Pitts"
                android:textColor="@color/search_gray" />

            <!--</com.google.android.material.textfield.TextInputLayout>-->
            <com.stuffer.stuffers.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Mobile Number : "
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_rounded"
                android:orientation="horizontal"
                android:padding="5dp">


                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvCountryCodeU"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    android:textSize="16sp" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvMobNumU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/search_gray"
                    android:textSize="16sp" />


            </LinearLayout>

            <com.stuffer.stuffers.views.MyCheckBox
                android:visibility="gone"
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Please Accept Terms and Conditions"
                android:textColor="@color/search_gray" />


            <com.stuffer.stuffers.views.MyButton
                android:id="@+id/btnCardEnrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/blue_rounded_bg"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>