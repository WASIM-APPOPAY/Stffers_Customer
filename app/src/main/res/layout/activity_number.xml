<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".commonChat.chat.NumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:padding="@dimen/dp_15"
            android:src="@drawable/appopay_new_logo2" />

        <com.stuffer.stuffers.views.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Phone Number Verification"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <com.stuffer.stuffers.views.MyTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="We will Send you a OTP"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/colorPrimary" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"



                android:background="@drawable/bg_border_round"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_circle_link"
                    android:padding="10dp"
                    android:src="@drawable/icon_mobile_phone"
                    app:tint="@color/white" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/edtCustomerCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#0000"
                    android:gravity="center"
                    android:inputType="number"

                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="14sp"
                    app:ccp_areaCodeDetectedCountry="true"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_defaultPhoneCode="507"
                    app:ccp_excludedCountries=""
                    app:ccp_showFlag="false"

                    app:ccp_showFullName="false"
                    app:ccp_showNameCode="false" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorPrimary"
                    app:boxBackgroundMode="outline">

                    <com.stuffer.stuffers.views.MyEditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:drawablePadding="12dp"
                        android:gravity="left"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:lines="1"
                        android:padding="10dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25sp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_border_round"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/bg_circle_link"
                    android:padding="10dp"
                    android:src="@drawable/icon_mail"
                    app:tint="@color/white" />


                <com.google.android.material.textfield.TextInputLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorPrimary"
                    app:boxBackgroundMode="outline">

                    <com.stuffer.stuffers.views.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:drawablePadding="12dp"
                        android:gravity="left"
                        android:hint="Enter Email-id"
                        android:inputType="phone"
                        android:lines="1"
                        android:padding="10dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </RelativeLayout>


        <com.stuffer.stuffers.views.MyTextView
            android:id="@+id/tvSent"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            android:background="@drawable/blue_rounded_bg"
            android:elevation="1.5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Next"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

    <!--<include layout="@layout/bootm_layout" />-->
</LinearLayout>