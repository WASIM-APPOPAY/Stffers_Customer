<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/rLayout"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    tools:context=".activity.wallet.SplashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/logoo" />

            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center"
                android:text="Buy Sell,Pay &amp; Chat.\nAccepted at 52,000,000 Merchant Globally "
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="28sp"

                />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/into_logo" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/qr_splash" />

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/bottom_logo_union" />
            </FrameLayout>

            <com.stuffer.stuffers.views.MyTextViewBold
                android:visibility="gone"
                android:id="@+id/tvTapInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/info_tab_agree"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="25sp"


                />
            <com.stuffer.stuffers.views.MyTextViewBold
                android:layout_width="wrap_content"
                android:id="@+id/tvLanguage"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="@string/info_select_language"
                android:textColor="#FB8310"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/ic_down_language" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/tvCheck"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical" />

                <com.stuffer.stuffers.views.MyTextView
                    android:id="@+id/tvAgree"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/blue_rounded_bg"
                    android:elevation="1.5dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="ACCEPT T&amp;C"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

<include layout="@layout/common_bg_bottom"/>
